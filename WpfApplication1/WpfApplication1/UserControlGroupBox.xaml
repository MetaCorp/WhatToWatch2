<UserControl x:Class="WpfApplication1.UserControlGroupBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:me="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" Margin="10" Background="#FF0C0C0C">
    <Grid Margin="5,0">
        <Button x:Name="labelTitle" Content="Action &gt;" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Foreground="White" FontSize="18" FontWeight="Bold" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Click="labelTitle_Click"/>
        <Rectangle Height="1" Margin="10,26,10,0" Stroke="#FFACACAC" VerticalAlignment="Top"/>
        <StackPanel x:Name="content" Orientation="Horizontal" Margin="6,37,5,8">
            <me:UserControlFilm x:Name="userControlFirstFilm" HorizontalAlignment="Left" Width="Auto" VerticalAlignment="Top" />
            <WrapPanel x:Name="panel" Orientation="Vertical"/>
        </StackPanel>
    </Grid>
</UserControl>
